<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             Title="Login">

    <StackLayout Padding="30" VerticalOptions="Center">
        <Label Text="Kullanıcı Adı:" FontSize="Medium" />
        <Entry x:Name="UsernameEntry" Placeholder="Kullanıcı Adı" />

        <Label Text="Şifre:" FontSize="Medium" Margin="0,10,0,0" />
        <Entry x:Name="PasswordEntry" Placeholder="Şifre" IsPassword="True" />

        <Button Text="Giriş Yap" Clicked="OnLoginClicked" BackgroundColor="#2196F3" TextColor="White" Margin="0,10,0,0"/>
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
    </StackLayout>
</ContentPage>

